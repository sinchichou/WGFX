{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "src/WGFX.ts",
    "src/runtime/WGFXRuntime.ts",
    "src/runtime/PipelineManager.ts",
    "src/runtime/ResourceManager.ts",
    "src/runtime/UniformBinder.ts",
    "src/types/shader.ts",
    "src/utils/Logger.ts"
  ],
  "out": "docs",
  "plugin": [
    "typedoc-plugin-markdown"
  ],
  "name": "WGFX API Documentation",
  "includeVersion": true,
  "categorizeByGroup": true,
  "excludeInternal": true,
  "searchInComments": true,
  "entryFileName": "index.md",
  "validation": {
    "invalidLink": true
  },
  "cleanOutputDir": false,
  "externalSymbolLinkMappings": {
    "global": {
      "GPUTexture": "https://www.w3.org/TR/webgpu/#gpu-texture",
      "GPUTextureView": "https://www.w3.org/TR/webgpu/#gputextureview"
    }
  },
  "highlightLanguages": [
    "typescript",
    "javascript",
    "wgsl",
    "hlsl",
    "json"
  ],
  "blockTags": [
    "@param",
    "@returns",
    "@throws",
    "@see",
    "@description",
    "@example",
    "@zh",
    "@compute",
    "@group",
    "@category",
    "@defaultValue",
    "@module"
  ]
}